<div class="wrapper excerpts">
    <div class="container">
        {{#foreach posts}}
            <div class="excerpt">
                <a href="{{url}}">
                    <h1>{{title}}</h1>
                </a>
                <div class="excerpt-content">{{content words="70"}}<a href="{{url}}">Read more&hellip;</a></div>
            </div>
        {{/foreach}}
    </div>
</div>

<div class="wrapper">
    {{pagination}}
</div>